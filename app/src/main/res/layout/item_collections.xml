<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <healby.com.ng.wallpaperplug.Utils.SquareImageView
        android:id="@+id/item_collection_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparentColour"
        android:padding="@dimen/activity_vertical_margin">
        <TextView
            android:id="@+id/item_collection_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:text="Beautiful Mountain"
            android:textColor="@color/colourWhite"
            android:layout_centerInParent="true"
            android:textAlignment="center" />
        <TextView
            android:id="@+id/item_collection_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20 Photos"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colourWhite"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>


</FrameLayout>